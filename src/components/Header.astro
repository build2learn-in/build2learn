---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="bg-white shadow-sm sticky top-0 z-50">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<nav class="flex justify-between items-center h-16">
			<div class="flex-shrink-0">
				<a href="/" class="text-primary font-bold text-xl">
					{SITE_TITLE}
				</a>
			</div>
			<div class="hidden md:block">
				<div class="flex items-center space-x-4">
					<HeaderLink href="/" class="px-3 py-2 text-gray-700 hover:text-primary">Home</HeaderLink>
					<HeaderLink href="/blog" class="px-3 py-2 text-gray-700 hover:text-primary">Blog</HeaderLink>
					<HeaderLink href="/project" class="px-3 py-2 text-gray-700 hover:text-primary">Project</HeaderLink>
					<HeaderLink href="/about" class="px-3 py-2 text-gray-700 hover:text-primary">About</HeaderLink>
				</div>
			</div>
			<div class="hidden md:flex items-center space-x-3">
				<a href="https://github.com/build2learn-in/" target="_blank" class="text-gray-500 hover:text-gray-700">
					<span class="sr-only">GitHub</span>
					<svg viewBox="0 0 16 16" aria-hidden="true" class="w-6 h-6">
						<path
							fill="currentColor"
							d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
						></path>
					</svg>
				</a>
				<a href="https://twitter.com/build2learn_in" target="_blank" class="text-gray-500 hover:text-gray-700">
					<span class="sr-only">Twitter</span>
					<svg viewBox="0 0 16 16" aria-hidden="true" class="w-6 h-6">
						<path
							fill="currentColor"
							d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"
						></path>
					</svg>
				</a>
			</div>
			
			<!-- Mobile menu button -->
			<div class="md:hidden flex items-center">
				<button type="button" class="mobile-menu-button inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-primary hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-primary">
					<span class="sr-only">Open main menu</span>
					<svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
					</svg>
				</button>
			</div>
		</nav>
	</div>
	
	<!-- Mobile menu, show/hide based on menu state -->
	<div class="mobile-menu hidden md:hidden">
		<div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
			<a href="/" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-primary hover:bg-gray-50">Home</a>
			<a href="/blog" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-primary hover:bg-gray-50">Blog</a>
			<a href="/about" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-primary hover:bg-gray-50">About</a>
		</div>
	</div>
</header>

<script>
	// Mobile menu toggle
	document.addEventListener('astro:page-load', () => {
		const mobileMenuButton = document.querySelector('.mobile-menu-button');
		const mobileMenu = document.querySelector('.mobile-menu');
		
		if (mobileMenuButton && mobileMenu) {
			mobileMenuButton.addEventListener('click', () => {
				mobileMenu.classList.toggle('hidden');
			});
		}
	});
</script>
