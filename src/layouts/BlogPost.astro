---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import SocialShareButtons from '../components/SocialShareButtons.astro';
import BlogAuthor from '../components/BlogAuthor.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage, tags, authors } =
  Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={heroImage} />
    <style>
      main {
        width: 100%;
        max-width: 100%;
        margin: 0 auto;
        padding: 3em 1rem;
      }

      @media (min-width: 640px) {
        main {
          padding: 3em 1.5rem;
        }
      }

      @media (min-width: 1024px) {
        main {
          padding: 3em 2rem;
          max-width: 1080px;
        }
      }

      article {
        max-width: 100%;
        margin: 0;
        padding: 0;
      }

      .title-section {
        margin-bottom: 2em;
      }

      .title-section h1 {
        margin: 0 0 0.75em 0;
        font-size: 2.75em;
        line-height: 1.15;
        font-weight: 700;
        color: rgb(var(--black));
        letter-spacing: -0.02em;
      }

      .subtitle {
        font-size: 1.25em;
        line-height: 1.4;
        color: rgb(var(--gray));
        margin-bottom: 1em;
      }

      .meta-info {
        display: flex;
        align-items: center;
        gap: 0.75em;
        color: rgb(var(--gray));
        font-size: 0.875em;
        padding-bottom: 1.5em;
        border-bottom: 1px solid rgb(var(--gray-light));
        margin-top: 0.5em;
      }

      .meta-info .date-separator {
        color: rgb(var(--gray));
      }

      .last-updated-on {
        font-style: italic;
        font-size: 0.875em;
        color: rgb(var(--gray));
      }

      .hero-image {
        width: 80%;
        max-width: 900px;
        margin: 0 0 2.5em 0;
      }

      .hero-image img {
        display: block;
        width: 100%;
        height: auto;
        border-radius: 12px;
        box-shadow: var(--box-shadow);
      }

      .author-section {
        margin-top: 2.5em;
        margin-bottom: 0;
      }

      article .prose {
        width: 100%;
        max-width: 100%;
        margin: 0;
        padding: 0;
      }

      @media (max-width: 720px) {
        article {
          padding: 2em 1em;
        }

        .title-section h1 {
          font-size: 2em;
        }

        .subtitle {
          font-size: 1.1em;
        }

        .meta-info {
          flex-wrap: wrap;
        }
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <article>
        <div class="title-section">
          <h1>{title}</h1>
          {description && <div class="subtitle">{description}</div>}
          <div class="meta-info">
            {authors && <BlogAuthor authorKeys={authors} />}
            <span class="date-separator">·</span>
            <FormattedDate date={pubDate} />
            {
              updatedDate && (
                <>
                  <span class="date-separator">·</span>
                  <div class="last-updated-on">
                    Updated <FormattedDate date={updatedDate} />
                  </div>
                </>
              )
            }
          </div>
        </div>

        {
          heroImage && (
            <div class="hero-image">
              <img width={1020} height={510} src={heroImage} alt="" />
            </div>
          )
        }

        <div class="prose">
          <slot />

          <!-- Social Share Section -->
          <div class="social-share-section mt-8 pt-6 border-t border-gray-200">
            <h3 class="text-lg font-semibold mb-4">Share this post</h3>
            <SocialShareButtons
              title={title}
              description={description}
              type="blog"
            />
          </div>

          <!-- Share Section -->
          <div
            class="share-section flex items-center justify-between flex-wrap gap-4 mt-6"
          >
            <div>
              {
                tags && (
                  <div class="flex items-center flex-wrap gap-2">
                    {tags.map((tag: string) => (
                      <a
                        class="not-prose rounded-base border border-gray-300 dark:border-gray-600 bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-gray-100 px-2 py-0.5 text-sm no-underline hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
                        href={`/blog/tags/${tag}`}
                      >
                        #{tag}
                      </a>
                    ))}
                  </div>
                )
              }
            </div>
          </div>
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
