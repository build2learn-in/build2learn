---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { render } from 'astro:content';

export async function getStaticPaths() {
  const events = await getCollection('event');

  return events.map((event) => ({
    params: { slug: event.id },
    props: { event },
  }));
}

const { event } = Astro.props;
const { Content } = await render(event);

const formattedDate = event.data.eventDate.toLocaleDateString('en-US', {
  weekday: 'long',
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const formattedDeadline = event.data.registrationDeadline.toLocaleDateString(
  'en-US',
  {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  }
);

const currentDate = new Date();
const eventDate = new Date(event.data.eventDate);
const registrationDeadline = new Date(event.data.registrationDeadline);

let status;
if (eventDate < currentDate) {
  status = 'PAST';
} else if (eventDate.toDateString() === currentDate.toDateString()) {
  status = 'ONGOING';
} else {
  status = 'UPCOMING';
}

const statusColors = {
  UPCOMING: 'bg-blue-100 text-blue-700',
  ONGOING: 'bg-red-100 text-red-700',
  PAST: 'bg-indigo-100 text-indigo-700',
};

// Logo-inspired color palette
const logoColors = {
  UPCOMING: {
    backgroundColor: '#f0f4ff',
    patternColor: '#444cf7',
    patternColorAlpha: '#444cf777',
  },
  ONGOING: {
    backgroundColor: '#fef7f7',
    patternColor: '#ef4444',
    patternColorAlpha: '#ef444477',
  },
  PAST: {
    backgroundColor: '#f8f9ff',
    patternColor: '#8b8cf7',
    patternColorAlpha: '#8b8cf777',
  },
};
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={`${event.data.title} | Build2Learn`}
      description={event.data.description}
    />
  </head>
  <body>
    <Header />

    <!-- Full-width header background -->
    <div
      class="relative mb-12 py-16 overflow-hidden isometric-bg"
      data-status={status}
    >
      <!-- Content overlay for readability -->
      <div class="absolute inset-0 bg-white/40 backdrop-blur-[1px]"></div>

      <!-- Content -->
      <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div
          class={`inline-flex px-3 py-1 rounded-full text-xs font-medium ${statusColors[status]} mb-4 bg-white/80 backdrop-blur-sm`}
        >
          {status}
        </div>
        <h1
          class="text-4xl md:text-5xl font-bold text-gray-900 mb-6 leading-tight drop-shadow-sm"
        >
          {event.data.title}
        </h1>
        <div class="flex flex-wrap gap-6 text-gray-800">
          <div
            class="flex items-center bg-white/70 backdrop-blur-sm rounded-lg px-4 py-3 shadow-sm"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 mr-2 text-gray-700"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
              <line x1="16" y1="2" x2="16" y2="6"></line>
              <line x1="8" y1="2" x2="8" y2="6"></line>
              <line x1="3" y1="10" x2="21" y2="10"></line>
              <path d="m9 16 2 2 4-4"></path>
            </svg>
            <span class="font-semibold">{formattedDate}</span>
          </div>
          <div
            class="flex items-center bg-white/70 backdrop-blur-sm rounded-lg px-4 py-3 shadow-sm"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              style="width:3rem;"
              class="h-6 w-6 mr-2 text-gray-700"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
            <a
              href={event.data.venue_location}
              target="_blank"
              rel="noopener noreferrer"
              class="hover:text-blue-600 transition-colors font-semibold"
            >
              {event.data.venue} - {event.data.venue_address}
            </a>
          </div>
        </div>
      </div>
    </div>

    <main>
      <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 pb-12">
        {
          status === 'UPCOMING' && (
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-8">
              <h2 class="text-lg font-semibold text-blue-900 mb-4">
                Registration Information
              </h2>
              <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4">
                <div class="space-y-2">
                  {event.data.maxParticipants && (
                    <p class="text-blue-800">
                      <span class="font-medium">Max Participants:</span>{' '}
                      {event.data.maxParticipants}
                    </p>
                  )}
                  <p class="text-blue-800">
                    <span class="font-medium">Registration Deadline:</span>{' '}
                    {formattedDeadline}
                  </p>
                </div>
                {currentDate <= registrationDeadline ? (
                  <a
                    href={event.data.registration_link}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-800 hover:text-white transition-colors"
                  >
                    Register Now
                  </a>
                ) : (
                  <span class="inline-flex items-center justify-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-500 bg-gray-100">
                    Registration Closed
                  </span>
                )}
              </div>
            </div>
          )
        }

        <div class="prose max-w-none">
          <Content />
        </div>

        {
          event.data.organisers && event.data.organisers.length > 0 && (
            <section class="mt-12">
              <h2 class="text-2xl font-bold text-gray-900 mb-6">
                Event Organizers
              </h2>
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {event.data.organisers.map((organiser) => (
                  <div class="bg-white rounded-lg shadow-md p-6">
                    <div class="flex items-center mb-4">
                      <img
                        src={organiser.photo || '/default-avatar.jpg'}
                        alt={organiser.name}
                        class="w-16 h-16 rounded-full object-cover mr-4"
                      />
                      <div>
                        <h3 class="text-lg font-semibold text-gray-900">
                          {organiser.name}
                        </h3>
                        {organiser.role && (
                          <p class="text-gray-600">{organiser.role}</p>
                        )}
                      </div>
                    </div>
                    {organiser.social && (
                      <div class="flex gap-4">
                        {organiser.social.linkedin && (
                          <a
                            href={organiser.social.linkedin}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-gray-600 hover:text-blue-600"
                          >
                            <svg
                              class="w-5 h-5"
                              fill="currentColor"
                              viewBox="0 0 24 24"
                            >
                              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
                            </svg>
                          </a>
                        )}
                        {organiser.social.twitter && (
                          <a
                            href={organiser.social.twitter}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-gray-600 hover:text-blue-400"
                          >
                            <svg
                              class="w-5 h-5"
                              fill="currentColor"
                              viewBox="0 0 24 24"
                            >
                              <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z" />
                            </svg>
                          </a>
                        )}
                        {organiser.social.github && (
                          <a
                            href={organiser.social.github}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-gray-600 hover:text-gray-900"
                          >
                            <svg
                              class="w-5 h-5"
                              fill="currentColor"
                              viewBox="0 0 24 24"
                            >
                              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                            </svg>
                          </a>
                        )}
                        {organiser.social.website && (
                          <a
                            href={organiser.social.website}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-gray-600 hover:text-green-600"
                          >
                            <svg
                              class="w-5 h-5"
                              fill="none"
                              stroke="currentColor"
                              viewBox="0 0 24 24"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
                              />
                            </svg>
                          </a>
                        )}
                      </div>
                    )}
                  </div>
                ))}
              </div>
            </section>
          )
        }
      </article>
    </main>
    <Footer />
  </body>
</html>

<style>
  .isometric-bg {
    opacity: 0.9;
  }

  .isometric-bg[data-status='UPCOMING'] {
    background-color: #e8f0ff;
    background-image:
      radial-gradient(#444cf7 0.5px, transparent 0.5px),
      radial-gradient(#444cf7 0.5px, #e8f0ff 0.5px);
    background-size: 20px 20px;
    background-position:
      0 0,
      10px 10px;
  }

  .isometric-bg[data-status='ONGOING'] {
    background-color: #ffe8e8;
    background-image:
      radial-gradient(#ef4444 0.5px, transparent 0.5px),
      radial-gradient(#ef4444 0.5px, #ffe8e8 0.5px);
    background-size: 20px 20px;
    background-position:
      0 0,
      10px 10px;
  }

  .isometric-bg[data-status='PAST'] {
    background-color: #f0f0ff;
    background-image:
      radial-gradient(#8b8cf7 0.5px, transparent 0.5px),
      radial-gradient(#8b8cf7 0.5px, #f0f0ff 0.5px);
    background-size: 20px 20px;
    background-position:
      0 0,
      10px 10px;
  }
</style>
